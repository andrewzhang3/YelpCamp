<% include partials/header %>

<div class="row">
    <div class="col-md-12 text-center">
        <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
            <div class="form-group">
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
            </div>
            <div class="form-group">
                <label for="regisPassword" class="sr-only">Password</label>
                <input type="password" id="regisPassword" class="form-control" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label for="inputFName" class="sr-only">First Name</label>
                <input type="text" id="inputFName" name="firstname" class="form-control" placeholder="John">
            </div>
            <div class="form-group">
                <label for="inputLName" class="sr-only">Last Name</label>
                <input type="text" id="inputLName" name="lastname" class="form-control" placeholder="Doe">
            </div>
            <div class="form-group">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="awesome@gmail.com">
            </div>
            <div class="form-group">
                <label for="inputAvatar" class="sr-only">Avatar</label>
                <input type="text" id="inputAvatar" name="avatar" class="form-control" placeholder="Avatar URL">
            </div>
            <div class="form-group">
                <label for="inputAdminPass" class="sr-only">Admin Password</label>
                <input type="password" id="inputAdminPass" name="adminCode" class="form-control" placeholder="Admin Code">
            </div>


            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>
